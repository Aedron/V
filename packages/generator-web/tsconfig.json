{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "allowJs": false,
    "skipLibCheck": true,
    "lib": ["ES2015"]
  },
  "compileOnSave": true,
  "include": ["src", "node_modules/@vize/runtime-web/src/libs/style.ts", "node_modules/@vize/runtime-web/types"],
  "exclude": ["src/runtime"],
  "files": ["global.d.ts"]
}
